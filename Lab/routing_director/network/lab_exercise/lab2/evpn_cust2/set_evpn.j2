interfaces {
    {{ intf }} {
        flexible-vlan-tagging;
        encapsulation flexible-ethernet-services;
        unit {{ unit }} {
            vlan-id {{ unit }};
            encapsulation vlan-bridge;
        }
    }
}
routing-instances {
    {{ vrf_name }} {
        interface {{ intf }}.{{unit}};
        instance-type evpn;
        vrf-target target:{{vrf_target}};
        protocols {
            evpn;
        }
    }
}